#! /bin/bash

bucket=repo.itlab.stanford.edu
endpoint=s3-us-west-2.amazonaws.com
def_codename=trusty
def_component=main
def_sign=0F39DA6C

cmd=$1
shift
args=

for arg in $*; do

  case ${arg} in

    --bucket=*)
      bucket=${arg}
      ;;

    --endpoint=*)
      endpoint=${arg}
      ;;
  
    *)
      args="${args} ${arg}"
      ;;
  esac
  shift
done

# upload needs the --sign=KEYID arg
if [[ ${cmd} == 'upload' ]]; then
  [[ ${args} =~ .--sign=\[\^\ \]+ ]] || args="${args} --sign=${def_sign}"
  [[ ${args} =~ .--component=\[\^\ \]+ ]] || args="${args} --component=${def_component}"
  [[ ${args} =~ .--codename=\[\^\ \]+ ]] || args="${args} --codename=${def_codename}"
fi
    
/usr/bin/deb-s3 ${cmd} ${args} --bucket=${bucket} --endpoint=${endpoint}
  
